<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-<%= exhibition.id %>">
    <div class="card">
      <%= link_to exhibition_path(exhibition) do %>
        <%= image_tag 'Nowloading.png', class: 'card-img-top', size: '500x500' %>
      <% end %>
      <div class="card-body">
        <h4 class="card-title">
            <%= link_to exhibition.title, exhibition_path(exhibition) %>
            <%# お試しで↓ここに入れて確認中 %>
            <%# ここまで%>
        </h4>

        <% if current_user.own?(exhibition) %>
          <%= render 'crud_menus', exhibition: exhibition  %>
        <% else %>
          <%= render 'bookmark_button', exhibition: exhibition %>
        <% end %>
        <ul class="list-inline">
          <li class="list-inline-item">
            <i class="far fa-user"></i>
            <%= exhibition.user.name %>
          </li>
          <li class="list-inline-item">
            <i class="fas fa-calendar-alt"></i>
            <%= l exhibition.created_at, format: :long %>
          </li>
        </ul>
        <p class="card-text"><%= simple_format(exhibition.description) %></p>
      </div>
    </div>
  </div>
</div>
