<div class="container pt-3">
   <div class="row">
     <div class="col-lg-10 offset-lg-1">
       <!-- 検索フォーム　ヘッダーで隠れている -->
       <form>
         <div class="input-group mb-3">
           <input class="form-control" placeholder="準備中" type="search" />
           <div class="input-group-append">
             <input type="submit" value="検索" class="btn btn-primary" />
           </div>
         </div>
       </form>
     </div>
   </div>
 
   <!-- 個展一覧 -->
   <div class="row">
     <div class="col-12">
       <div class="row">
         <% if @my_exhibitions.present? %>
           <%= render @my_exhibitions %>
         <% else %>
           <p><%= "開催中の個展はありません" %></p>
         <% end %>
       </div>
     </div>
   </div>
   <%= link_to "トップページに戻る", root_path %>
 </div>